#!/bin/bash
# kubctl-0x02
# Script to deploy blue-green deployments and check logs

# 1. Apply Blue deployment
echo "Deploying Blue version..."
kubectl apply -f blue_deployment.yaml

# 2. Apply Green deployment
echo "Deploying Green version..."
kubectl apply -f green_deployment.yaml

# 3. Apply Service
echo "Applying Service to route traffic..."
kubectl apply -f kubeservice.yaml

# 4. Check pods
echo "Checking pods status..."
kubectl get pods

# 5. Check logs for Blue version
echo "Logs for Blue pods:"
kubectl logs -l version=blue

# 6. Check logs for Green version
echo "Logs for Green pods:"
kubectl logs -l version=green
